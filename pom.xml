				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat6-maven-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<!-- 默认访问路径为：http://localhost:${project.contextPath}/${project.port} -->
